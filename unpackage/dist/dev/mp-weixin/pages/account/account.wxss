
.detail {
	width: 92%;
	margin: 0 auto;
	 margin-top: 40rpx; 
	background-color: #007AFF;
	/* background-color: #2C405A; */
	/* background-color: #3F536E; */
	/* background-color: #fff; */
	padding: 30rpx;
	border-radius: 20rpx;
